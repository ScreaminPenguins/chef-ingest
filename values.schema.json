{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "GlobalVariables": {
      "additionalProperties": true,
      "type": "object",
      "required": ["imageRegistry", "datahub"],
      "properties": {
        "imageRegistry": {
          "type": "string"
        },
        "datahub": {
          "type": "object",
          "additionalProperties": true,
          "required": ["version"],
          "properties": {
            "version": {
              "type": "string"
            }
          }
        }
      }
    },
    "Image": {
      "type": "object",
      "additionalProperties": true,
      "required": ["repository"],
      "properties": {
        "repository": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string"
        }
      }
    },
    "Secret": {
      "type": "string"
    }
  },
  "properties": {
    "global": {
      "$ref": "#/definitions/GlobalVariables"
    },
    "image": {
      "$ref": "#/definitions/Image"
    },
    "secrets": {
      "type": "object",
      "additionalProperties": true,
      "required": ["ingredients"],
      "properties": {
        "ingredients": {
          "type": "object",
          "additionalProperties": true,
          "patternProperties": {
            "^.*": {
              "$ref": "#/definitions/Secret"
            }
          }
        },
        "sink": {
          "type": "object",
          "additionalProperties": true,
          "required": ["dataHubSink"],
          "properties": {
            "dataHubSink": {
              "$ref": "#/definitions/Secret"
            },
            "kafkaSaslUser": {
              "$ref": "#/definitions/Secret"
            },
            "kafkaSaslPswd": {
              "$ref": "#/definitions/Secret"
            },
            "schemaRegBasicAuth": {
              "$ref": "#/definitions/Secret"
            }
          }
        }
      }
    }
  }
}
